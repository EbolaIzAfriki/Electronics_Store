<Window x:Class="Electronics_Store.HistorySellsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Electronics_Store"
        mc:Ignorable="d"
        Title="HistorySellsForm" Height="450" Width="1100"
        WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <DataGrid Grid.Row="1" x:Name="DG" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="id" Width="0.2*" Binding="{Binding id}"></DataGridTextColumn>
                <DataGridTextColumn Header="ФИО сотрудника" Width="1.5*" Binding="{Binding FIO}"></DataGridTextColumn>
                <DataGridTextColumn Header="Наименование" Width="*" Binding="{Binding name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Производитель" Width="*" Binding="{Binding manufacture}"></DataGridTextColumn>
                <DataGridTextColumn Header="Стоимость" Width="0.45*" Binding="{Binding price}"></DataGridTextColumn>
                <DataGridTextColumn Header="Категория" Width="1.2*" Binding="{Binding type}"></DataGridTextColumn>
                <DataGridTextColumn Header="Количество" Width="0.5*" Binding="{Binding countTov}"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата" Width="0.5*" Binding="{Binding DATA}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
